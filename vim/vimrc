"  \ \   / /_ _|  \/  |  _ \ / ___|
"   \ \ / / | || |\/| | |_) | |    
"    \ V /  | || |  | |  _ <| |___ 
"     \_/  |___|_|  |_|_| \_\\____|

set background=dark
colorscheme slate
filetype plugin indent on
syntax enable

hi StatusLine ctermfg=7 ctermbg=0
hi StatusLineNC ctermfg=8 ctermbg=0
hi Visual ctermbg=15 ctermfg=4
hi Comment ctermbg=0 ctermfg=8
hi LineNr ctermbg=0 ctermfg=8
hi clear WildMenu
hi link WildMenu Visual

set rulerformat=%30(%=L:%l/%L\ \ \ C:%c\ \ \ 0x%B%)

set tabstop=2 softtabstop=2 shiftwidth=2 expandtab
set autoindent smartindent

set autoread
set clipboard+=unnamed,unnamedplus
set completeopt=menu,preview
set noincsearch ignorecase smartcase noshowmatch
set number
set ttimeoutlen=100
set undofile undodir=~/.vim/tmp/undo

set wildignore=*.out,*.o,*.obj,*.swp,node_modules,.git,*.exe
set wildmenu wildmode=longest,full:list

if (has('viminfo'))
  set viminfofile=$HOME/.vim/.viminfo
endif

command W w
command Q q
command Qa qa
command WQ wq
command Wq wq
command Vimrc edit ~/.vim/vimrc
