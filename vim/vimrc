set background=dark
filetype plugin indent on
syntax enable

hi StatusLine ctermfg=7
hi StatusLineNC ctermfg=8
hi Visual ctermbg=4 ctermfg=15
hi WildMenu ctermbg=4 ctermfg=15
hi DiffText ctermbg=4 ctermfg=15
hi Comment ctermfg=8
hi LineNr ctermfg=8
hi DiffChange ctermbg=136 ctermfg=15
hi DiffAdd ctermfg=0 ctermbg=10
hi DiffDelete ctermfg=0 ctermbg=1
hi DiffChange ctermfg=0 ctermbg=13

set number
set rulerformat=%30(%=L:%l/%L\ \ \ C:%c\ \ \ 0x%B%)
set tabstop=4 softtabstop=4 shiftwidth=4 expandtab
set autoindent smartindent
set ttimeoutlen=100
set clipboard+=unnamed,unnamedplus
set completeopt=menu,preview
set incsearch ignorecase smartcase noshowmatch
set wildignore=*.out,*.o,*.obj,*.swp,node_modules,.git,*.exe
set wildmenu wildmode=longest,full:list
set undofile undodir=~/.vim/tmp/undo
set viminfofile=$HOME/.vim/.viminfo

command Vimrc edit $MYVIMRC
