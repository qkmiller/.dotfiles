
setopt appendhistory
setopt rm_star_wait
setopt multios
setopt prompt_subst
unsetopt BEEP

#export PATH="$PATH:$HOME/.local/bin"
export PATH="/Users/quinn/Library/Python/3.8/bin/:$PATH"
export PATH="/opt/homebrew/bin:/opt/homebrew/sbin:$PATH"
export NOTES="$HOME/Desktop/notes/"
export PASERVER=192.168.0.57
export EDITOR="vim"

set -o vi

HISTFILE="$HOME/.zsh/.zsh_history"
HISTSIZE=1000
SAVEHIST=1000

# Disable ctrl-s which pauses the terminal
stty stop ''

# Auto completion
autoload -U compinit -d ~/.zsh/.zcompdump
zstyle ':completion:*' matcher-list 'm:{a-zA-Z}={A-Za-z}' 'r:|=*' 'l:|=* r:|=*'
compinit

# Enable v to edit-and-execute
autoload -U edit-command-line 
zle -N edit-command-line
bindkey -M vicmd v edit-command-line

#alias ls="ls --color=auto"
alias ls="ls -G"
alias py="python3"
alias diff="diff --color"
alias vps="ssh quinn@173.255.215.170 -p 65535"


