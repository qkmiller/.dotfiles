" Filetype detection
filetype plugin indent on

" Colors
syntax enable
if &t_Co > 16
        set t_Co=16
        color default
        set bg=dark
        hi Comment      cterm=NONE          ctermfg=8
        hi LineNr       cterm=NONE          ctermfg=8
        hi PmenuSel     cterm=NONE          ctermfg=15      ctermbg=4
        hi Pmenu        cterm=NONE          ctermfg=15      ctermbg=8
        hi MatchParen   cterm=BOLD          ctermfg=6       ctermbg=NONE
        hi StatusLineNC                     ctermfg=8
        hi Visual       cterm=NONE          ctermfg=15      ctermbg=8
        hi WildMenu     cterm=BOLD          ctermfg=15      ctermbg=4
        "hi Special      cterm=NONE          ctermfg=9       ctermbg=NONE
        hi Search       cterm=NONE          ctermfg=0       ctermbg=15
        hi IncSearch    cterm=NONE          ctermfg=0       ctermbg=11
        hi Constant     cterm=BOLD
endif


" If macvim, don't load the macvim colorscheme
let macvim_skip_colorscheme=1

" Indentation settings
set autoindent smartindent cindent expandtab
"set tabstop=4 
"set softtabstop=-1 
"set shiftwidth=0 

" Turn off the visual/auditory bell
set belloff=all

" Ensure backspace does what's expected
"set backspace=indent,eol,start

" Where it makes sense, remove a comment leader when joining lines.
" See fo-table
set formatoptions+=j

" Hide buffers when switching away from them
set hidden

" Search options
set hlsearch incsearch ignorecase smartcase 

"set noshowmatch

" Always show satus bar
set laststatus=2

" Line numbers
set number

" Disable swap files
set noswapfile

"Don't wrap long lines
set nowrap

" Using F2, toggle all formatting options off/on before pasting into vim
set pastetoggle=<F2>

" Timeout to allow terminal to intercept key presses
set ttimeoutlen=100

" Record undo history for each file in ~/.vim/tmp/undo
set undofile undodir=$HOME/.vim/tmp/undo

" Move the viminfo file to the ~/.vim
set viminfofile=$HOME/.vim/.viminfo

" Ignore certain files and folders when using the wildmenu
set wildignore=*.a,*.out,*.o,*.obj,*.swp,node_modules,.git,*.exe

" Enable the wildmenu
set wildmenu

" In Netrw, show files as a tree and hidee certain files
let g:netrw_liststyle=3
let g:netrw_list_hide='.*\.a$,.*\.out$,.*\.o,.*\.obj$,.*\.swp$,node_modules,.*\.git$,.*\.exe$'

"nnoremap <C-n> :bn<CR>
"nnoremap <C-p> :bp<CR>

" Open Netrw with Tab
nnoremap <Tab> :Lex<CR>

" Remap some frequently type-o'd commands
cnoremap Wq wq
cnoremap WQ wq
cnoremap Q q
cnoremap Qa qa
cnoremap W w
